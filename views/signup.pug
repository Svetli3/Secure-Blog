extends layout 

block variables
  //-username comes from res.render() on the server, USERNAME is the name of the variable in the pug, USERNAME is also
  //-defined in a script so it can be used in the js files
  - var LOGGED_IN = logged_in
  script.
    //https://pugjs.org/language/interpolation.html
    var LOGGED_IN = "#{LOGGED_IN}";

block header 
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/signup.css')


block content 
    h1 Sign Up
    div#root
      form(action="/users/signup", method="post")
        input(type="hidden" name="csrfToken" value=csrfToken)
        .signup 
          .inputs
            label(for="displayName" id="text") Display Name   
            input(type="text" id="displayName" name="displayname" value=displayname required='')  
            
            label(for="username" id="text") Username  
            input(type="text" id="username" name="username" value=username required='')
          
            label(for="password" id="text") Password  
            input(type="password" id="password" name="password" value=password required='')

            label(for="password" id="text") Verify Password  
            input(type="password" id="verifyPassword" name="verifyPassword" value=verifyPassword required='')
            
            label(for="email" id="text") Email  
            input(type="text" id="email" name="email" value=email required='')
            
            button#signUpButton Sign Up 

          div#errorMessagesContainer
            p= error1
            p= error2
            p= error3
            p= error4
            p= error5 
            p= error6 
      #tos
        p Camel Privacy Policy: 
        p By signing up, I accept the privacy policy of Camel, accepting both the collecting and processing of the following data:
        ul
          li Email Address
          li IP Address: IPV4
        p The Email address will be collected to send a passcode for 2-factor authentication to ensure that the user is authenticated properly.  
        p The IP address is collected to compare the user in the current sessions IP address with the IP address saved in the database to prevent session hijacking. 
        p Consent of the privacy policy can be withdrawn by emailing Camel Support   
        p Camel Support Email Address:  camelspprt@gmail.com    